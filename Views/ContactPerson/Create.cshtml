@model ClassLibrary.Models.ContactPersonEntity

<h1>Добавить волонтера</h1>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="FirstName"></label>
        <input asp-for="FirstName" class="form-control" />
        <span asp-validation-for="FirstName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="LastName"></label>
        <input asp-for="LastName" class="form-control" />
        <span asp-validation-for="LastName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="MilitaryUnitId" class="control-label"></label>
        <select asp-for="MilitaryUnitId" asp-items="ViewBag.MilitaryUnits" class="form-control">
            <option value="">Select Military Unit</option>
        </select>
        <span asp-validation-for="MilitaryUnitId" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Сохранить</button>
    <a asp-action="Index" class="btn btn-secondary">Отмена</a>
</form>
