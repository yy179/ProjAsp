@model IEnumerable<ClassLibrary.Models.ContactPersonEntity>

<h1>Список контактных лиц</h1>

<table class="table">
    <thead>
        <tr>
            <th>Имя</th>
            <th>Фамилия</th>
            <th>Действия</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var contactPerson in Model)
        {
            <tr>
                <td>@contactPerson.FirstName</td>
                <td>@contactPerson.LastName</td>
                <td>
                    <a asp-action="Delete" asp-route-id="@contactPerson.Id">Удалить</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="Create" class="btn btn-primary">Добавить контактное лицо</a>
