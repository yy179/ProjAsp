@model ClassLibrary.Models.VolunteerEntity

<h1>Удалить Волонтера</h1>

<div>
    <h4>Вы уверены, что хотите удалить волонтера @Model.FirstName @Model.LastName?</h4>
    <div>
        <strong>Город:</strong> @Model.City
    </div>
</div>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Удалить</button>
    <a asp-action="Index" class="btn btn-secondary">Отмена</a>
</form>
