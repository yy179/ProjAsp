@model IEnumerable<ClassLibrary.Models.OrganizationEntity>

<h1>Список организаций</h1>

<table class="table">
    <thead>
        <tr>
            <th>Название</th>
            <th>Город</th>
            <th>Описание</th>
            <th>Действия</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var organization in Model)
        {
            <tr>
                <td>@organization.Name</td>
                <td>@organization.City</td>
                <td>@organization.Description</td>
                <td>
                    <a asp-action="Details" asp-route-id="@organization.Id">Просмотр</a> |
                    <a asp-action="Edit" asp-route-id="@organization.Id">Редактировать</a> |
                    <a asp-action="Delete" asp-route-id="@organization.Id">Удалить</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="Create" class="btn btn-primary">Добавить организацию</a>
